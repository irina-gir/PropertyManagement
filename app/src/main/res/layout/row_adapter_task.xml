<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="item"
            type="com.example.propertymanagement.models.TaskRepository" />

        <variable
            name="adapter"
            type="com.example.propertymanagement.ui.taskManagement.AdapterRepoTask" />

        <variable
            name="viewModel"
            type="com.example.propertymanagement.ui.taskManagement.TaskViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/text_view_priority"
                    android:layout_width="263dp"
                    android:layout_height="40dp"
                    android:text="@{item.priority}"
                    app:layout_constraintEnd_toStartOf="@+id/button_edit_task"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_date"
                    android:layout_width="263dp"
                    android:layout_height="37dp"
                    android:text="@{item.dueDate}"
                    app:layout_constraintEnd_toStartOf="@+id/button_edit_task"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_priority" />

                <TextView
                    android:id="@+id/text_view_summary"
                    android:layout_width="262dp"
                    android:layout_height="37dp"
                    android:text="@{item.summary}"
                    app:layout_constraintEnd_toStartOf="@+id/button_delete_task"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_date" />

                <ImageButton
                    android:id="@+id/button_edit_task"
                    android:background="#fff"
                    android:src="@drawable/ic_baseline_create_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_view_priority"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/button_delete_task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#fff"
                    android:onClick="@{()-> adapter.onButtonDeleteClicked(item)}"
                    android:src="@drawable/ic_baseline_delete_forever_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_view_summary"
                    app:layout_constraintTop_toBottomOf="@+id/button_edit_task" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
